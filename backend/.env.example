# Variáveis de ambiente esperadas pelo backend

# MongoDB
MONGO_URI=

# Firebase Admin SDK (usado em config/firebaseAdmin.ts e lógica relacionada)
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
FIREBASE_ADMIN_PRIVATE_KEY=

# Chave da API do Firebase para o frontend (usada em config/env.ts)
NEXT_PUBLIC_FIREBASE_API_KEY=

# JWT Secret para autenticação da aplicação (usado em config/env.ts e UserService)
APP_JWT_SECRET=

# Configurações do Servidor
PORT=5000
NODE_ENV=development

# URLs e Limites
FRONTEND_URL=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Outras configurações do Firebase (se usadas diretamente pelo backend)
FIREBASE_STORAGE_BUCKET=
