{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "node scripts/checkFirebaseConfig.js",
    "build": "npm run clean && tsc && tsc-alias",
    "start": "node -r module-alias/register -r tsconfig-paths/register dist/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules src/index.ts",
    "test": "jest"
  },
  "_moduleAliases": {
    "@controllers": "dist/controllers",
    "@services": "dist/services",
    "@models": "dist/models",
    "@modules": "dist/modules",
    "@middlewares": "dist/middlewares",
    "@core": "dist/core",
    "@config": "dist/config",
    "@routes": "dist/routes",
    "@errors": "dist/core/errors",
    "@types": "dist/@types",
    "@jobs": "dist/jobs",
    "@interfaces": "dist/interfaces",
    "@pages": "dist/pages"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "chalk": "^4.1.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.3.0",
    "helmet": "^8.1.0",
    "inversify": "^7.5.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.14.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "os-utils": "^0.0.14",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/inversify": "^2.0.32",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.2",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@routes/(.*)$": "<rootDir>/src/routes/$1",
      "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
      "^@models/(.*)$": "<rootDir>/src/models/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@middlewares/(.*)$": "<rootDir>/src/middlewares/$1",
      "^@validations/(.*)$": "<rootDir>/src/validations/$1"
    }
  }
}
